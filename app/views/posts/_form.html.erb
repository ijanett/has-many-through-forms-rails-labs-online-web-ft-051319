<%= form_for @post do |f| %>
    <%= f.label "Title" %>
    <br>
    <%= f.text_field :title %>
    <br><br>
    <%= f.label "Content" %>
    <br>
    <%= f.text_field :content %>
    <br><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, include_blank: "No Category" %>
    <br><br>
    <%= f.label "Create a New Category"%>
    <br>
    <%= f.fields_for :categories, post.categories.build do |category_fields| %>
        <%= category_fields.text_field :name %><br>
    <%end%>
    <br>
    <%= f.submit %>
<%end%>
